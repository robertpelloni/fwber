APP_NAME=FWBer
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.fwber.me

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
# Production logging stack: daily files + stderr for container logs + security specific log
LOG_STACK=daily,stderr,security
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DAILY_DAYS=30
LOG_SECURITY_DAYS=90

TELEMETRY_ENABLED=true
TELEMETRY_STORE_EVENTS=true

DB_CONNECTION=mysql
DB_HOST=mysql.fwber.me
DB_PORT=3306
DB_DATABASE=fwber_production
DB_USERNAME=fwber
DB_PASSWORD=password

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.fwber.me
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

BROADCAST_CONNECTION=mercure
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=fwber_prod_

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS="no-reply@fwber.me"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=fwber-production-assets
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Sentry error monitoring (Required for production)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_SEND_DEFAULT_PII=false

# CORS configuration (Strict for production)
CORS_ALLOWED_ORIGINS=https://fwber.me,https://www.fwber.me,https://admin.fwber.me
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="X-Requested-With,Content-Type,X-Token-Auth,Authorization"
CORS_SUPPORTS_CREDENTIALS=true

# CSP configuration
CSP_RELAXED=false

# API Bypass Token - DISABLED IN PRODUCTION
# API_DEV_BYPASS_TOKEN=

# Avatar mode
AVATAR_MODE=generated-only

# Feature flags (Default to safe/MVP state)
FEATURE_GROUPS=true
FEATURE_PHOTOS=true
FEATURE_PROXIMITY_ARTIFACTS=true

# Advanced features (Disabled by default in prod until tested)
FEATURE_CHATROOMS=false
FEATURE_PROXIMITY_CHATROOMS=false
FEATURE_RECOMMENDATIONS=false
FEATURE_WEBSOCKET=false
FEATURE_CONTENT_GENERATION=false
FEATURE_RATE_LIMITS=true
FEATURE_ANALYTICS=true
FEATURE_FACE_REVEAL=false
FEATURE_LOCAL_MEDIA_VAULT=false
FEATURE_MODERATION=true

# Mercure Real-time Hub (Production URLs)
MERCURE_INTERNAL_URL=http://mercure:3000/.well-known/mercure
MERCURE_PUBLIC_URL=https://hub.fwber.me/.well-known/mercure
MERCURE_PUBLISHER_KEY=
MERCURE_SUBSCRIBER_KEY=
