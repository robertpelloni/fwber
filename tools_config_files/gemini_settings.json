{
	"mcpServers": {
		"serena": {
			"command": "uv",
			"type": "stdio",
			"transport": "stdio",
			"args": [
				"run",
				"--directory",
				"C:\\Users\\hyper\\serena\\",
				"serena",
				"start-mcp-server",
				"--context",
				"agent",
				"--project",
				"C:\\Users\\hyper\\fwber\\"
			]
		},
		"sequential-thinking": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			]
		},
		"codex-mcp-server": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"codex-mcp-server"
			]
		},
		"filesystem": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"C:\\Users\\hyper\\fwber\\"
			],
			"timeout": 30000,
			"startupTimeout": 60000
		},
		"memory": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-memory"
			],
			"timeout": 30000,
			"startupTimeout": 60000
		},
		"everything": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-everything"
			],
			"timeout": 30000,
			"startupTimeout": 60000
		},
		"zen-mcp-server": {
			"command": "uv",
			"args": [
				"run",
				"--directory",
				"C:\\Users\\hyper\\zen-mcp-server\\",
				"zen-mcp-server"
			],
			"env": {
				"OPENAI_API_KEY": "${OPENAI_API_KEY}",
				"OPENROUTER_API_KEY": "${OPENROUTER_API_KEY}",
				"GEMINI_API_KEY": "${GEMINI_API_KEY}"
			},
			"timeout": 30000,
			"startupTimeout": 60000
		},
		"chroma-knowledge": {
			"command": "chroma-mcp-server",
			"args": [
				"--mode", "stdio", "--client-type", "http", "--host", "localhost", "--port", "8000", "--ssl", "false"
			],
			"timeout": 30000,
			"startupTimeout": 60000
		}
	},
	"security": {
		"auth": {
			"selectedType": "oauth-personal"
		}
	}
}