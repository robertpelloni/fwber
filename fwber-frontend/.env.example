# fwber Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=https://api.fwber.me
# NEXT_PUBLIC_API_URL=http://localhost:8000/api  # Development

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=wss://ws.fwber.me
# NEXT_PUBLIC_WS_URL=ws://localhost:8080  # Development

# Mercure SSE (if used)
NEXT_PUBLIC_MERCURE_URL=https://mercure.fwber.me

# Sentry Error Tracking (Optional - https://sentry.io)
# Sign up for free at https://sentry.io
# Create a Next.js project and copy the DSN here
# Free tier: 5,000 events/month
NEXT_PUBLIC_SENTRY_DSN=

# Example Sentry DSN format:
# NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# VAPID Public Key for Web Push Notifications
# Generate with `npx web-push generate-vapid-keys`
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# To disable Sentry, leave NEXT_PUBLIC_SENTRY_DSN empty or comment it out

# Feature Flags (client-side)
# When true, photo uploads blur detected faces before leaving the device.
NEXT_PUBLIC_FEATURE_CLIENT_FACE_BLUR=false
# Enables the Face Reveal / auto-reply experiment surfaces (UI only; still requires backend flag).
NEXT_PUBLIC_FEATURE_FACE_REVEAL=false
# Enables UI for the Local Media Vault beta (encryption + local storage helpers).
NEXT_PUBLIC_FEATURE_LOCAL_MEDIA_VAULT=false
