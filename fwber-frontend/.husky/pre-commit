#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit hook - runs on git commit
# This hook runs linting and formatting checks on staged files

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged to check only staged files
npx lint-staged

# Check if lint-staged succeeded
if [ $? -ne 0 ]; then
  echo "âŒ Pre-commit checks failed. Please fix the errors and try again."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
exit 0
