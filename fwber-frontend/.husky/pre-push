#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-push hook - runs on git push
# This hook runs type checking and tests before pushing

echo "ğŸš€ Running pre-push checks..."

# Type checking
echo "ğŸ“ Running TypeScript type check..."
npm run type-check

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix type errors before pushing."
  exit 1
fi

# Run tests (if test script exists)
if grep -q "\"test\":" package.json; then
  echo "ğŸ§ª Running tests..."
  npm run test -- --passWithNoTests

  if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix failing tests before pushing."
    exit 1
  fi
fi

# Check build
echo "ğŸ—ï¸  Checking if build works..."
npm run build

if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix build errors before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"
exit 0
