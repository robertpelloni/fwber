# fwber.me Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_MERCURE_URL=http://localhost:3001/.well-known/mercure

# Push Notifications (VAPID)
# Generate with `npx web-push generate-vapid-keys`
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=
# Build-time keys (for uploading source maps)
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Feature Flags (client-side)
NEXT_PUBLIC_FEATURE_CLIENT_FACE_BLUR=true
NEXT_PUBLIC_FEATURE_FACE_REVEAL=true
NEXT_PUBLIC_FEATURE_LOCAL_MEDIA_VAULT=true
NEXT_PUBLIC_FEATURE_VIDEO_CHAT=true
NEXT_PUBLIC_FEATURE_AI_WINGMAN=true