# FWBer.me Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=fwber
DB_USER=fwber
DB_PASS=Temppass0!

# AI Avatar Generation API Keys
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google reCAPTCHA (used by legacy landing form)
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET=your_recaptcha_secret_here

# Alternative AI Providers (optional)
REPLICATE_API_TOKEN=your_replicate_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug

# Sentry Configuration
SENTRY_LARAVEL_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# Feature Flags
FEATURE_GROUPS=true
FEATURE_PHOTOS=true
FEATURE_PROXIMITY_ARTIFACTS=true
FEATURE_CHATROOMS=false
FEATURE_PROXIMITY_CHATROOMS=false
FEATURE_RECOMMENDATIONS=false
FEATURE_WEBSOCKET=false
FEATURE_CONTENT_GENERATION=false
FEATURE_RATE_LIMITS=false
FEATURE_ANALYTICS=false
FEATURE_FACE_REVEAL=false
FEATURE_LOCAL_MEDIA_VAULT=false
FEATURE_MODERATION=false

# Web Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Payment Configuration
PAYMENT_DRIVER=mock # or stripe
STRIPE_KEY=pk_test_...
STRIPE_SECRET=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
